<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.baha.fitnesstracker">

    <application
        android:name="co.baha.fitnesstracker.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessTracker">
        <!-- Добавляем активность LoginActivity -->
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity
            android:name="co.baha.fitnesstracker.ListCalcActivity"
            android:parentActivityName="co.baha.fitnesstracker.MainActivity"
            android:exported="false" />
        <activity
            android:name="co.baha.fitnesstracker.NdcActivity"
            android:exported="false" />
        <activity
            android:name="co.baha.fitnesstracker.ImcActivity"
            android:exported="false" />
        <activity android:name=".WaterTrackerActivity" />
        <activity android:name=".ExerciseTrackerActivity" />
        <activity
            android:name="co.baha.fitnesstracker.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>